{
	"printWidth": 120,
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"semi": false,
	"overrides": [
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"requirePragma": false,
				"parser": "scss"
			}
		},
		{
			"files": ["*.yml"],
			"options": {
				"tabWidth": 2
			}
		},
		{
			"files": "*.html",
			"options": {
				"requirePragma": false,
				"parser": "html",
				"htmlWhitespaceSensitivity": "ignore"
			}
		}
	]
}
